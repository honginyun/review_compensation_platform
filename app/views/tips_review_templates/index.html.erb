<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All tips reviews
    </h1>

    <a href="/tips_reviews/new" class="btn btn-block btn-outline-secondary">
      Add a new tips review
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "tips_review_templates/tips_reviews_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Review
        </th>

        <th>
          Amount
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @tips_reviews.each do |tips_review| %>
      <tr>
        <td>
          <%= tips_review.id %>
        </td>

        <td>
          <% if tips_review.user.present? %>
            <a href="/users/<%= tips_review.user.id %>">
              <%= tips_review.user.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if tips_review.review.present? %>
            <a href="/reviews/<%= tips_review.review.id %>">
              <%= tips_review.review.compensation_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= tips_review.amount %>
        </td>

        <td>
          <%= time_ago_in_words(tips_review.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(tips_review.updated_at) %> ago
        </td>

        <td>
          <a href="/tips_reviews/<%= tips_review.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @tips_reviews, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
