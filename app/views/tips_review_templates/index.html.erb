<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All tips reviews
    </h1>

    <a href="/tips_reviews/new" class="btn btn-block btn-outline-secondary">
      Add a new tips review
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Review
        </th>

        <th>
          Amount
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @tips_reviews.each do |tips_review| %>
      <tr>
        <!-- Display tips_review.id start -->
        <td>
          <%= tips_review.id %>
        </td>
        <!-- Display tips_review.id end -->

        <!-- Display tips_review.user_id start -->
        <td>
          <%= tips_review.user.created_at %>
        </td>
        <!-- Display tips_review.user_id end -->

        <!-- Display tips_review.review_id start -->
        <td>
          <%= tips_review.review_id %>
        </td>
        <!-- Display tips_review.review_id end -->

        <!-- Display tips_review.amount start -->
        <td>
          <%= tips_review.amount %>
        </td>
        <!-- Display tips_review.amount end -->

        <!-- Display tips_review.created_at start -->
        <td>
          <%= time_ago_in_words(tips_review.created_at) %> ago
        </td>
        <!-- Display tips_review.created_at end -->

        <!-- Display tips_review.updated_at start -->
        <td>
          <%= time_ago_in_words(tips_review.updated_at) %> ago
        </td>
        <!-- Display tips_review.updated_at end -->

        <td>
          <a href="/tips_reviews/<%= tips_review.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
