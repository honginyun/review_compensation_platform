<!-- Validation failure messages -->
<% if @review.errors.any? %>
  <% @review.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit review #<%= @review.id %>
</h1>

<hr>

<!-- Form review start -->
<form action="/update_review/<%= @review.id %>" method="post">
<!-- Form review end -->

  <!-- Label and input for compensation_id start -->
  <div class="form-group">
    <label for="compensation_id">
      Compensation
    </label>

    <!-- Input for compensation_id start -->
    <input type="text" id="compensation_id" name="compensation_id" class="form-control" value="<%= @review.compensation_id %>">
    <!-- Input for compensation_id end -->
  </div>
  <!-- Label and input for compensation_id end -->

  <!-- Label and input for review_content start -->
  <div class="form-group">
    <label for="review_content">
      Review content
    </label>

    <!-- Input for review_content start -->
    <input type="text" id="review_content" name="review_content" class="form-control" value="<%= @review.review_content %>">
    <!-- Input for review_content end -->
  </div>
  <!-- Label and input for review_content end -->

  <!-- Label and input for product_id start -->
  <div class="form-group">
    <label for="product_id">
      Product
    </label>

    <!-- Input for product_id start -->
    <input type="text" id="product_id" name="product_id" class="form-control" value="<%= @review.product_id %>">
    <!-- Input for product_id end -->
  </div>
  <!-- Label and input for product_id end -->

  <!-- Label and input for ratings start -->
  <div class="form-group">
    <label for="ratings">
      Ratings
    </label>

    <!-- Input for ratings start -->
    <input type="text" id="ratings" name="ratings" class="form-control" value="<%= @review.ratings %>">
    <!-- Input for ratings end -->
  </div>
  <!-- Label and input for ratings end -->

  <!-- Label and input for reviewer_id start -->
  <div class="form-group">
    <label for="reviewer_id">
      Reviewer
    </label>

    <!-- Input for reviewer_id start -->
    <input type="text" id="reviewer_id" name="reviewer_id" class="form-control" value="<%= @review.reviewer_id %>">
    <!-- Input for reviewer_id end -->
  </div>
  <!-- Label and input for reviewer_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update review
  </button>
</form>

<hr>

<a href="/reviews">
  Go back
</a>
