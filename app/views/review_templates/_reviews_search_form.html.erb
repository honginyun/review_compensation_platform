<%= search_form_for @q, :class => collapse_search_form, :id => "reviews_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :compensation_id, "Compensation" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :compensation_id_gteq, :class => "form-control", :placeholder => "Compensation greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :compensation_id_lteq, :class => "form-control", :placeholder => "Compensation less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :ratings, "Ratings" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :ratings_gteq, :class => "form-control", :placeholder => "Ratings greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :ratings_lteq, :class => "form-control", :placeholder => "Ratings less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :review_content_cont, "Review content contains" %>
    <%= f.text_field :review_content_cont, :class => "form-control", :placeholder => "Review content contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :compensation_amount, "CompensationsByPlatform Compensation amount" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :compensations_by_platform_compensation_amount_gteq, :class => "form-control", :placeholder => "CompensationsByPlatform Compensation amount greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :compensations_by_platform_compensation_amount_lteq, :class => "form-control", :placeholder => "CompensationsByPlatform Compensation amount less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "User Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='reviewergteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :reviewer_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "User Created at greater than or equal to", :data => {:target => '#reviewergteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#reviewergteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='reviewerlteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :reviewer_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "User Created at less than or equal to", :data => {:target => '#reviewerlteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#reviewerlteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#reviewergteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#reviewerlteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#reviewergteqcreated_atPicker').on("dp.change", function (e) {
              $('#reviewerlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#reviewerlteqcreated_atPicker').on("dp.change", function (e) {
              $('#reviewergteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :product_category_cont, "Product category contains" %>
    <%= f.text_field :product_category_cont, :class => "form-control", :placeholder => "Product category contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/reviews" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#reviews_filters">
  Show filters
</a>
