<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Tips Reviews

    <a data-toggle="collapse" href="#review_tips_reviews_new_form">
      Add tips review
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @review.tips_reviews.each do |tips_review| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/tips_reviews/<%= tips_review.id %>">
          <%= tips_review.user_id %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_tips_review_from_review/<%= tips_review.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="review_tips_reviews_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "review_templates/review_tips_reviews_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
