<form action="/create_comment_from_review" method="post">

  <input type="hidden" name="review_id" value="<%= @review.id %>">

  <div class="form-group">
    <label for="commenter_id">
      Commenter
    </label>

    <%= select_tag(:commenter_id, options_from_collection_for_select(User.all, :id, :created_at, @comment.commenter_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="comment">
      Comment
    </label>

    <textarea id="comment" name="comment" class="form-control" rows="3"><%= @comment.comment %></textarea>
  </div>

  <div class="form-group">
    <label for="comment_vote">
      Comment vote
    </label>

    <input type="text" id="comment_vote" name="comment_vote" class="form-control" value="<%= @comment.comment_vote %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create comment
  </button>
</form>
