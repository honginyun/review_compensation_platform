<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Likes

    <a data-toggle="collapse" href="#review_likes_new_form">
      Add vote
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @review.likes.each do |vote| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/votes/<%= vote.id %>">
          <%= vote.user_id %>
        </a>

        <a href="/delete_vote_from_review/<%= vote.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="review_likes_new_form">
        <%= render partial: "review_templates/review_likes_new_form" %>
      </div>
    </div>

  </ul>
</div>
