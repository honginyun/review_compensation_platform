<form action="/create_vote_from_review" method="post">

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :created_at, @vote.user_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="review_id" value="<%= @review.id %>">

  <div class="form-group">
    <label for="upvote">
      Upvote
    </label>

    <input type="text" id="upvote" name="upvote" class="form-control" value="<%= @vote.upvote %>">
  </div>

  <div class="form-group">
    <label for="downvote">
      Downvote
    </label>

    <input type="text" id="downvote" name="downvote" class="form-control" value="<%= @vote.downvote %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create vote
  </button>
</form>
