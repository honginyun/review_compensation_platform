<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All compensations by platforms
    </h1>

    <a href="/compensations_by_platforms/new" class="btn btn-block btn-outline-secondary">
      Add a new compensations by platform
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Compensation amount
        </th>

        <th>
          Review
        </th>

        <th>
          Compensated
        </th>

        <th>
          Notes
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @compensations_by_platforms.each do |compensations_by_platform| %>
      <tr>
        <!-- Display compensations_by_platform.id start -->
        <td>
          <%= compensations_by_platform.id %>
        </td>
        <!-- Display compensations_by_platform.id end -->

        <!-- Display compensations_by_platform.compensation_amount start -->
        <td>
          <%= compensations_by_platform.compensation_amount %>
        </td>
        <!-- Display compensations_by_platform.compensation_amount end -->

        <!-- Display compensations_by_platform.review_id start -->
        <td>
          <% if compensations_by_platform.review.present? %>
            <a href="/reviews/<%= compensations_by_platform.review.id %>">
              <%= compensations_by_platform.review.compensation_id %>
            </a>
          <% end %>
        </td>
        <!-- Display compensations_by_platform.review_id end -->

        <!-- Display compensations_by_platform.compensated start -->
        <td>
          <%= compensations_by_platform.compensated %>
        </td>
        <!-- Display compensations_by_platform.compensated end -->

        <!-- Display compensations_by_platform.notes start -->
        <td>
          <%= compensations_by_platform.notes %>
        </td>
        <!-- Display compensations_by_platform.notes end -->

        <!-- Display compensations_by_platform.created_at start -->
        <td>
          <%= time_ago_in_words(compensations_by_platform.created_at) %> ago
        </td>
        <!-- Display compensations_by_platform.created_at end -->

        <!-- Display compensations_by_platform.updated_at start -->
        <td>
          <%= time_ago_in_words(compensations_by_platform.updated_at) %> ago
        </td>
        <!-- Display compensations_by_platform.updated_at end -->

        <td>
          <a href="/compensations_by_platforms/<%= compensations_by_platform.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @compensations_by_platforms, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
