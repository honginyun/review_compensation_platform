<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All votes
    </h1>

    <a href="/votes/new" class="btn btn-block btn-outline-secondary">
      Add a new vote
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Review
        </th>

        <th>
          Upvote
        </th>

        <th>
          Downvote
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @votes.each do |vote| %>
      <tr>
        <!-- Display vote.id start -->
        <td>
          <%= vote.id %>
        </td>
        <!-- Display vote.id end -->

        <!-- Display vote.user_id start -->
        <td>
          <%= vote.user_id %>
        </td>
        <!-- Display vote.user_id end -->

        <!-- Display vote.review_id start -->
        <td>
          <%= vote.review_id %>
        </td>
        <!-- Display vote.review_id end -->

        <!-- Display vote.upvote start -->
        <td>
          <%= vote.upvote %>
        </td>
        <!-- Display vote.upvote end -->

        <!-- Display vote.downvote start -->
        <td>
          <%= vote.downvote %>
        </td>
        <!-- Display vote.downvote end -->

        <!-- Display vote.created_at start -->
        <td>
          <%= time_ago_in_words(vote.created_at) %> ago
        </td>
        <!-- Display vote.created_at end -->

        <!-- Display vote.updated_at start -->
        <td>
          <%= time_ago_in_words(vote.updated_at) %> ago
        </td>
        <!-- Display vote.updated_at end -->

        <td>
          <a href="/votes/<%= vote.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
