<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All votes
    </h1>

    <a href="/votes/new" class="btn btn-block btn-outline-secondary">
      Add a new vote
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "vote_templates/votes_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Review
        </th>

        <th>
          Upvote
        </th>

        <th>
          Downvote
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @votes.each do |vote| %>
      <tr>
        <td>
          <%= vote.id %>
        </td>

        <td>
          <% if vote.user.present? %>
            <a href="/users/<%= vote.user.id %>">
              <%= vote.user.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if vote.review.present? %>
            <a href="/reviews/<%= vote.review.id %>">
              <%= vote.review.compensation_id %>
            </a>
          <% end %>
        </td>

        <td>
          <%= vote.upvote %>
        </td>

        <td>
          <%= vote.downvote %>
        </td>

        <td>
          <%= time_ago_in_words(vote.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(vote.updated_at) %> ago
        </td>

        <td>
          <a href="/votes/<%= vote.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @votes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
