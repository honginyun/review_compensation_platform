<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Vote #<%= @vote.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/votes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/votes/<%= @vote.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit vote
        </a>
      </div>

      <div class="col">
        <a href="/delete_vote/<%= @vote.id %>" class="btn btn-block btn-outline-secondary">
          Delete vote
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @vote.user.present? %>
          <a href="/users/<%= @vote.user_id %>">
            <%= @vote.user.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Review
      </dt>
      <dd>
        <% if @vote.review.present? %>
          <a href="/reviews/<%= @vote.review_id %>">
            <%= @vote.review.compensation_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Upvote
      </dt>
      <dd>
        <%= @vote.upvote %>
      </dd>

      <dt>
        Downvote
      </dt>
      <dd>
        <%= @vote.downvote %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@vote.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@vote.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

