<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All comments
    </h1>

    <a href="/comments/new" class="btn btn-block btn-outline-secondary">
      Add a new comment
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Review
        </th>

        <th>
          Commenter
        </th>

        <th>
          Comment
        </th>

        <th>
          Comment vote
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @comments.each do |comment| %>
      <tr>
        <!-- Display comment.id start -->
        <td>
          <%= comment.id %>
        </td>
        <!-- Display comment.id end -->

        <!-- Display comment.review_id start -->
        <td>
          <%= comment.review.compensation_id %>
        </td>
        <!-- Display comment.review_id end -->

        <!-- Display comment.commenter_id start -->
        <td>
          <%= comment.commenter.created_at %>
        </td>
        <!-- Display comment.commenter_id end -->

        <!-- Display comment.comment start -->
        <td>
          <%= comment.comment %>
        </td>
        <!-- Display comment.comment end -->

        <!-- Display comment.comment_vote start -->
        <td>
          <%= comment.comment_vote %>
        </td>
        <!-- Display comment.comment_vote end -->

        <!-- Display comment.created_at start -->
        <td>
          <%= time_ago_in_words(comment.created_at) %> ago
        </td>
        <!-- Display comment.created_at end -->

        <!-- Display comment.updated_at start -->
        <td>
          <%= time_ago_in_words(comment.updated_at) %> ago
        </td>
        <!-- Display comment.updated_at end -->

        <td>
          <a href="/comments/<%= comment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @comments, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
