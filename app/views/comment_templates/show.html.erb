<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Comment #<%= @comment.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/comments" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link comment start -->
      <div class="col">
        <a href="/comments/<%= @comment.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit comment
        </a>
      </div>
      <!-- Edit link comment end -->

      <!-- Delete link comment start -->
      <div class="col">
        <a href="/delete_comment/<%= @comment.id %>" class="btn btn-block btn-outline-secondary">
          Delete comment
        </a>
      </div>
      <!-- Delete link comment end -->
    </div>

    <dl>
      <dt>
        Review
      </dt>
      <!-- Display review_id start -->
      <dd>
        <% if @comment.review.present? %>
          <a href="/reviews/<%= @comment.review_id %>">
            <%= @comment.review.compensation_id %>
          </a>
        <% end %>
      </dd>
      <!-- Display review_id end -->

      <dt>
        Commenter
      </dt>
      <!-- Display commenter_id start -->
      <dd>
        <% if @comment.commenter.present? %>
          <a href="/users/<%= @comment.commenter_id %>">
            <%= @comment.commenter.created_at %>
          </a>
        <% end %>
      </dd>
      <!-- Display commenter_id end -->

      <dt>
        Comment
      </dt>
      <!-- Display comment start -->
      <dd>
        <%= @comment.comment %>
      </dd>
      <!-- Display comment end -->

      <dt>
        Comment vote
      </dt>
      <!-- Display comment_vote start -->
      <dd>
        <%= @comment.comment_vote %>
      </dd>
      <!-- Display comment_vote end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@comment.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@comment.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "comment_templates/comment_vote_comments" %>
  </div>
</div>
<!-- Show Page Customization end -->
