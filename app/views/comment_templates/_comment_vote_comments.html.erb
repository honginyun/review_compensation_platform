<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Vote Comments

    <a data-toggle="collapse" href="#comment_vote_comments_new_form">
      Add vote comment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @comment.vote_comments.each do |vote_comment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/vote_comments/<%= vote_comment.id %>">
          <%= vote_comment.voter_id %>
        </a>

        <%if current_user == vote_comment.voter %>
          <a href="/delete_vote_comment_from_comment/<%= vote_comment.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="comment_vote_comments_new_form">
        <%= render partial: "comment_templates/comment_vote_comments_new_form" %>
      </div>
    </div>

  </ul>
</div>
