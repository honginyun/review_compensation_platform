<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Vote comment #<%= @vote_comment.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/vote_comments" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @vote_comment.voter %>
          <a href="/vote_comments/<%= @vote_comment.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit vote_comment
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @vote_comment.voter %>
          <a href="/delete_vote_comment/<%= @vote_comment.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete vote_comment
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Voter
      </dt>
      <dd>
        <% if @vote_comment.voter.present? %>
          <a href="/users/<%= @vote_comment.voter_id %>">
            <%= @vote_comment.voter.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>
        Comment
      </dt>
      <dd>
        <% if @vote_comment.comment.present? %>
          <a href="/comments/<%= @vote_comment.comment_id %>">
            <%= @vote_comment.comment.review_id %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@vote_comment.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@vote_comment.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

