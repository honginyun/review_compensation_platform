<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All products
    </h1>

    <a href="/products/new" class="btn btn-block btn-outline-secondary">
      Add a new product
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Category
        </th>

        <th>
          Company
        </th>

        <th>
          Serial no
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @products.each do |product| %>
      <tr>
        <!-- Display product.id start -->
        <td>
          <%= product.id %>
        </td>
        <!-- Display product.id end -->

        <!-- Display product.category start -->
        <td>
          <%= product.category %>
        </td>
        <!-- Display product.category end -->

        <!-- Display product.company_id start -->
        <td>
          <%= product.company_id %>
        </td>
        <!-- Display product.company_id end -->

        <!-- Display product.serial_no start -->
        <td>
          <%= product.serial_no %>
        </td>
        <!-- Display product.serial_no end -->

        <!-- Display product.created_at start -->
        <td>
          <%= time_ago_in_words(product.created_at) %> ago
        </td>
        <!-- Display product.created_at end -->

        <!-- Display product.updated_at start -->
        <td>
          <%= time_ago_in_words(product.updated_at) %> ago
        </td>
        <!-- Display product.updated_at end -->

        <td>
          <a href="/products/<%= product.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
