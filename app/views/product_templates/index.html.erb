<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All products
    </h1>

    <a href="/products/new" class="btn btn-block btn-outline-secondary">
      Add a new product
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "product_templates/products_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Category
        </th>

        <th>
          Company
        </th>

        <th>
          Serial no
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.id %>
        </td>

        <td>
          <%= product.category %>
        </td>

        <td>
          <%= product.company_id %>
        </td>

        <td>
          <%= product.serial_no %>
        </td>

        <td>
          <%= time_ago_in_words(product.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(product.updated_at) %> ago
        </td>

        <td>
          <a href="/products/<%= product.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @products, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
