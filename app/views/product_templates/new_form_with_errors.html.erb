<% if @product.present? %>
  <% if @product.errors.any? %>
    <% @product.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new product
</h1>


<hr>

<form action="/create_product" method="post">

  <div class="form-group">
    <label for="category">
      Category
    </label>

    <input type="text" id="category" name="category" class="form-control" value="<%= @product.category %>">
  </div>

  <div class="form-group">
    <label for="company_id">
      Company
    </label>

    <input type="text" id="company_id" name="company_id" class="form-control" value="<%= @product.company_id %>">
  </div>

  <div class="form-group">
    <label for="serial_no">
      Serial no
    </label>

    <input type="text" id="serial_no" name="serial_no" class="form-control" value="<%= @product.serial_no %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create product
  </button>
</form>

<hr>

<a href="/products">
  Go back
</a>
